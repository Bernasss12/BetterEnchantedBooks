{
  "schemaVersion": 1,
  "id": "bebooks",
  "version": "${version}",

  "name": "Better Enchanted Books",
  "description": "Colors the stripe on enchanted books depending on the enchantment, sorts tooltips and shows which items each enchantment can be applied to on the tooltip.",
  "authors": [
    "Bernasss12"
  ],
  "contact": {
    "homepage": "https://github.com/Bernasss12",
    "sources": "https://github.com/Bernasss12/BetterEnchantedBooks",
    "issues": "https://github.com/Bernasss12/BetterEnchantedBooks/issues"
  },

  "license": "Unlicense",
  "icon": "assets/bebooks/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "dev.bernasss12.bebooks.BetterEnchantedBooks"
    ],
    "modmenu": [
      "dev.bernasss12.bebooks.ModMenuIntegration"
    ]
  },
  "mixins": [
    "bebooks.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.9.0",
    "fabric": "*",
    "minecraft": ">=1.17.0",
    "cloth-config2": ">=5.0.0"
  }
}
